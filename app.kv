# create your Kivy layout in the kv language here
BoxLayout:
    padding: 5
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:  # Top-Left
            orientation: 'vertical'
            size_hint_x: 0.35

            Label:
                id: output_label
                font_size: 36
                text: 'Sort By'

            Button:
                text: "Place_Holder"
                on_press: app.handle_pressed()

            Label:
                id: output_label
                font_size: 36
                text: 'title'

            TextInput:
                id: input_miles
                text: 'Input Title'
                font_size: 36
                on_text: app.handle_calculate()

            Label:
                id: output_label
                font_size: 36
                text: 'artist'

            TextInput:
                id: input_miles
                text: 'Input Artist'
                font_size: 36
                on_text: app.handle_calculate()

            Label:
                id: output_label
                font_size: 36
                text: 'year'

            TextInput:
                id: input_miles
                text: 'Input Year'
                font_size: 48
                on_text: app.handle_calculate()

            Button:
                text: "Add Song"
                on_press: app.handle_pressed()

            Button:
                text: "Clear"
                on_press: app.handle_pressed()


        BoxLayout:  # Top-Right
            orientation: 'vertical'
            Label:
                id: my_label
                text: "Hello world"
                font_size: 42